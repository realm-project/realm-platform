#set($rest = "ans://realmproject.net:1401/rest/model")

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- Top Router -->
	<bean id="router" class="net.realmproject.service.device.web.IPathRouter">
		<constructor-arg><map>
	
#foreach($kind in $p)
#if($resttemplate.hasRestProperties($kind))
			<entry key="$kind.getComponentName().toLowerCase()" value-ref="router-$kind.getComponentName().toLowerCase()" />
#end
#end
		
		</map></constructor-arg>
	</bean>
	
	
#foreach($kind in $p)
#if($resttemplate.hasRestProperties($kind))
	<import resource="routers/${kind.getComponentName()}.xml" />
#end
#end
	
</beans>
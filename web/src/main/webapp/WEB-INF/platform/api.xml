<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- API -->
	<bean id="platform-authn-api" class="net.realmproject.security.authentication.ISessionValidator">
		<constructor-arg ref="platform-authz-api" />
		<constructor-arg ref="application-database" />
	</bean>


	<bean id="platform-api" class="net.realmproject.corc.IPathRouter">
		<constructor-arg>
			<map>
				<entry key="common"  value-ref="platform-api-common"/>
				<entry key="student" value-ref="platform-api-student"/>
 				<entry key="teacher" value-ref="platform-api-teacher"/>
 				<entry key="admin" value-ref="platform-api-admin"/>  
			</map>
		</constructor-arg>
	</bean>

	
	
	<!-- Common API -->
	<bean id="platform-api-common" class="net.realmproject.repo.api.IReceiverHandler">
		<constructor-arg ref="application-database" />
		<constructor-arg>
			<bean class="net.realmproject.repo.api.ICommonAPIReceiver" />
		</constructor-arg>
	</bean>

	
	<!-- Student API -->
	<bean id="platform-api-student" class="net.realmproject.repo.api.IReceiverHandler">
		<constructor-arg ref="application-database" />
		<constructor-arg>
			<bean class="net.realmproject.repo.api.IStudentAPIReceiver" />
		</constructor-arg>
	</bean>


	<!-- Teacher API -->
	<bean id="platform-api-teacher" class="net.realmproject.security.authorization.IAuthorizationHandler">
		<constructor-arg>
			<bean class="net.realmproject.repo.api.IReceiverHandler">
				<constructor-arg ref="application-database" />
				<constructor-arg>
					<bean class="net.realmproject.repo.api.ITeacherAPIReceiver" />
				</constructor-arg>
			</bean>
		</constructor-arg>
		<constructor-arg ref="application-database"/>
		<constructor-arg ref="platform-role-teacher"/>
	</bean>
	

	<!-- Admin API -->
	<bean id="platform-api-admin" class="net.realmproject.security.authorization.IAuthorizationHandler">
		<constructor-arg>
			<bean class="net.realmproject.repo.api.IReceiverHandler">
				<constructor-arg ref="application-database" />
				<constructor-arg>
					<bean class="net.realmproject.repo.api.IAdminAPIReceiver" />
				</constructor-arg>
			</bean>
		</constructor-arg>
		<constructor-arg ref="application-database"/>
		<constructor-arg ref="platform-role-admin"/>
	</bean>
	

</beans>
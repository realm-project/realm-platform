<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<!-- Devices -->
	<bean id="platform-authn-device" class="net.realmproject.platform.security.authentication.ISessionValidator">
		<constructor-arg ref="platform-authz-devices" />
		<constructor-arg ref="application-database" />
	</bean>
	
	<bean id="platform-authz-device" class="net.realmproject.platform.security.authorization.IAuthorizationHandler">
		<constructor-arg ref="application-devices"/>
		<constructor-arg ref="application-database"/>
		<constructor-arg>
			<bean class="net.realmproject.platform.security.authorization.authorizers.DeviceName" />
		</constructor-arg>
	</bean>


	<!-- Device Event Busses -->
	<bean id="platform-frontend-bus" class="net.realmproject.dcm.event.bus.IDeviceEventBus" />
	<bean id="platform-backend-bus" class="net.realmproject.dcm.event.bus.IDeviceEventBus" />

	<!-- Send GET/SET events from frontend-bus to backend-bus -->
	<bean class="net.realmproject.dcm.event.bus.IDeviceEventBusForwarder">
		<constructor-arg ref="platform-frontend-bus"/>
		<constructor-arg ref="platform-backend-bus"/>
		<constructor-arg>
			<bean class="net.realmproject.dcm.event.filter.BackendFilter"/>
		</constructor-arg>
	</bean>
	
	
	<!-- Send status change events from frontend-bus to backend-bus -->
	<bean class="net.realmproject.dcm.event.bus.IDeviceEventBusForwarder">
		<constructor-arg ref="platform-backend-bus"/>
		<constructor-arg ref="platform-frontend-bus"/>
		<constructor-arg>
			<bean class="net.realmproject.dcm.event.filter.FrontendFilter"/>
		</constructor-arg>
	</bean>
	
</beans>